    <filter>
		<filter-name>loginDelegatingFilterProxy</filter-name>
		<filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
		<init-param>
			<param-name>targetBeanName</param-name>
			<param-value>checkReLoginFitler</param-value>
		</init-param>
		<init-param>
			<param-name>targetFilterLifecycle</param-name>
			<param-value>true</param-value>
		</init-param>
	</filter>

	<filter-mapping>
		<filter-name>loginDelegatingFilterProxy</filter-name>
		<url-pattern>/auth/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>loginDelegatingFilterProxy</filter-name>
		<url-pattern>/main.htm</url-pattern>
	</filter-mapping>
	<filter>
		<filter-name>perMissionDelegatingFilterProxy</filter-name>
		<filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
		<init-param>
			<param-name>targetBeanName</param-name>
			<param-value>permissionchantFilter</param-value>
		</init-param>
		<init-param>
			<param-name>targetFilterLifecycle</param-name>
			<param-value>true</param-value>
		</init-param>
	</filter>

	<filter-mapping>
		<filter-name>perMissionDelegatingFilterProxy</filter-name>
		<url-pattern>/auth/*</url-pattern>
	</filter-mapping>
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
        <!-- <welcome-file>index.jsp</welcome-file> -->
    </welcome-file-list>
    <error-page>
        <error-code>404</error-code>
        <location>/error/404.jsp</location>
    </error-page>
    <error-page>
        <error-code>400</error-code>
        <location>/error/400.jsp</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/error/500.jsp</location>
    </error-page>
    <error-page>
        <error-code>503</error-code>
        <location>/error/503.jsp</location>
    </error-page>
</web-app>